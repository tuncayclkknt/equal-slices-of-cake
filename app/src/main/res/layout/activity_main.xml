<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <SurfaceView
        android:id="@+id/surfaceView"
        android:layout_width="420sp"
        android:layout_height="560sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.555"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <com.tuncay.eitpastadilil.PieChartView
        android:id="@+id/pieChartView"
        android:layout_width="300sp"
        android:layout_height="300sp"
        android:padding="10sp"
        app:layout_constraintBottom_toBottomOf="@+id/surfaceView"
        app:layout_constraintEnd_toEndOf="@+id/surfaceView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/surfaceView" />


    <LinearLayout

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/surfaceView"
        app:layout_constraintVertical_bias="0.781">

        <Button
            android:id="@+id/btnMinus"
            android:layout_width="60sp"
            android:layout_height="60sp"
            android:text="-"
            android:textSize="25sp"
            android:layout_marginHorizontal="5sp"
            tools:layout_editor_absoluteX="226dp"
            tools:layout_editor_absoluteY="669dp" />

        <TextView
            android:id="@+id/txtslices"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2"
            android:textSize="25sp"
            android:textIsSelectable="false"
            android:layout_marginHorizontal="5sp"
            tools:layout_editor_absoluteX="162dp"
            tools:layout_editor_absoluteY="686dp" />

        <Button
            android:id="@+id/btnPlus"
            android:layout_width="60sp"
            android:layout_height="60sp"
            android:text="+"
            android:textSize="25sp"
            android:layout_marginHorizontal="5sp"
            tools:layout_editor_absoluteX="69dp"
            tools:layout_editor_absoluteY="670dp" />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>